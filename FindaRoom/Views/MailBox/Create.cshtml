@model FindaRoom.Models.Message

@{
    ViewBag.Title = "Send an Email";
}

<h2>Create</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Message</h4>
        <hr />
        @Html.ValidationSummary(true)
        <div class="col-md-10">
            @Html.HiddenFor(e => e.UserSender)
        </div>
        <div class="col-md-10">
            @Html.HiddenFor(e => e.UserReceiver)
        </div>
        <div class="col-md-10">
            @Html.HiddenFor(e => e.ReceiverId)
        </div>
            <div class="form-group">
                @Html.LabelFor(model => model.UserReceiver, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.UserReceiver)
                    @Html.ValidationMessageFor(model => model.UserReceiver)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Subject, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Subject)
                    @Html.ValidationMessageFor(model => model.Subject)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.MessageBody, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.MessageBody)
                    @Html.ValidationMessageFor(model => model.MessageBody)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Send" class="btn btn-default" />
                </div>
            </div>
        </div>
}

<div>
    @Html.ActionLink("Back to Inbox", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
